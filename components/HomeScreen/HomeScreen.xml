<component name="HomeScreen" extends="Group">
    <interface>
        <field id="content" type="node" onChange="receiveContent" alwaysNotify="true" />
        <field id="closeScreen" type="Boolean" value="false" />
    </interface>
    <script type="text/brightscript" uri="HomeScreen.brs" />

    <children>
        <Poster id="backgroundPoster" opacity="0.25" />
        <Overhang showClock="true" logoUri="#" showOptions="true"/>
        <StartingPageTextComponent id="startingPageTextComponent" translation="[150, 50]" />
        <RowList id="contentRowList" itemComponentName="MovieRowListItem" translation="[150, 300]" />
        <Dialog id="dialogOnBack" close="false" title="Warning" message="Do you really want to exit?" optionsDialog="true" messageFont="font:LargeBoldSystemFont" visible="false" />
    </children>
</component>